* {
    font:   "Iosevka Medium 13";

    bg0:     #2B3339;
    bg1:     #323D43;
    fg0:     #D3C6AA;

    accent-color:     #A7C080;
    // accent-color:     #4f5b58;
    highlight-color:     #414b50;
    urgent-color:     #DBBC7F;

    background-color:   transparent;
    text-color:         @fg0;

    margin:     0;
    padding:    0;
    spacing:    0;
}

window {
    location:   center;
    width:      750;

    background-color:   @bg0;

    border-radius: 12;
}

inputbar {
    spacing:    8px;
    padding:    24px;

    background-color:   @bg1;
}

prompt, entry, element-icon, element-text {
    vertical-align: 0.5;
}

prompt {
    text-color: @accent-color;
}

textbox {
    padding:            8px;
    background-color:   @bg1;
}

listview {
    padding:    24px 16px;
    lines:      8;
    columns:    1;

    fixed-height:   true;
}

element {
    padding:    24px;
    spacing:    8px;
}

element normal normal {
    text-color: @fg0;
}

element normal urgent {
    text-color: @urgent-color;
}

element normal active {
    text-color: @accent-color;
}

element alternate active {
    text-color: @accent-color;
}

element selected {
    text-color: @fg0;
    border-radius: 50px;
    padding: 24px;
}

element selected normal, element selected active {
    background-color:   @highlight-color;
}

element selected urgent {
    background-color:   @urgent-color;
}

element-icon {
    // size:   0.8em;
    size:   1.8em;
    padding: 0 24px 0 0;
}

element-text {
    text-color: inherit;
}
